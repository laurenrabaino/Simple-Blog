<%=render :partial=>"shared/error", :locals=>{ :object => @profile }%>

<% form_for(@profile, :as => :post, :url => "/connect", :html => { :multipart => true }) do |f| %>

	<%= f.hidden_field :status, :value => 1  %>
	
	<div class="row">
		<label for="full_name" class="label"><%=t("form.profile.labels.username").capitalize%>
			<span class="required">*</span>
		</label>
		<%= f.text_field :user_name, :maxlength => 256, :size => 15  %>
	</div>

	<div class="row">
		<label for="terms_of_service" class="label"><%=t("form.profile.termsofuse.accept").capitalize%>
			<span class="required">*</span>
		</label>
		<%= f.check_box :terms_of_use, :id=>"termsOfService" %>
	</div>
	
	<div class="row">
		<label>&nbsp;</label>
		<input type="submit" name="submit" value="<%=t("form.submit").capitalize%>">
	</div>

<%end%>