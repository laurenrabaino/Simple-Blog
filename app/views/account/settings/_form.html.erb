<%=render :partial=>"shared/captcha_settings"%>
<%=render :partial=>"shared/error", :locals=>{ :object => @settings }%>

<% form_for(@settings, :url => update_account_setting_path(@settings), :html => { :multipart => true }) do |f| %>

	<div class="row">
		<label for="full_name" class="label"><%=t("form.settings.labels.fullname").capitalize%>	
		</label>
		<%= f.text_field :full_name, :maxlength => 256, :size => 15 %>
	</div>

	<div class="row">
		<label for="about_me" class="label"><%=t("form.settings.labels.aboutme").capitalize%> 
		</label>
		<%= ckeditor_textarea("settings", "about_me", :toolbar=>"SimpleBlog", :width => '444px', :height => '200px') %>
	</div>
	
	<div class="row">
		<label for="public_profile" class="label"><%=t("form.settings.labels.publicprofile").capitalize%>
		</label>
		<%= f.check_box :is_public, :maxlength => 256, :size => 15, :class=>"normalCheckbox" %>
	</div>

	<div class="row">
		<label class='label'>&nbsp;</label>
		<input type="submit" name="submit" value="<%=t("form.settings.submit").capitalize%>">
	</div>

<%end%>