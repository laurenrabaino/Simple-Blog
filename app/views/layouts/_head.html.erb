<title><%=@header[:title].join(" :: ")%></title>

<%=get_stylesheets(is_admin?)%>

<!-- Include the JS files -->
<%if @post || (@page && @page.is_a?(Page)) || @comment%>
	<%= javascript_include_tag "ckeditor/ckeditor" %>
	<%= javascript_include_tag "jquery-1.4.4.min", 'jquery.cookie', 'facebox.js', "jcarousellite_1.0.1.js", "jquery.easing.compatibility.js", "jquery.easing.1.3.js", "jquery-ui-1.8.7.custom.min", "application", "ckcustom", :concat => "detail" unless is_admin?%>
	<%= javascript_include_tag "jquery-1.4.4.min", 'jquery.cookie', 'facebox.js', "jcarousellite_1.0.1.js", "jquery.easing.compatibility.js", "jquery.easing.1.3.js", "jquery-ui-1.8.7.custom.min", "admin", "application", "ckcustom", :concat => "detail_admin" if is_admin?%>
<%else%>
	<%= javascript_include_tag "jquery-1.4.4.min", 'jquery.cookie', 'facebox.js', "jcarousellite_1.0.1.js", "jquery.easing.compatibility.js", "jquery.easing.1.3.js", "jquery-ui-1.8.7.custom.min", "application", :concat => "global" unless is_admin? %>
	<%= javascript_include_tag "jquery-1.4.4.min", 'jquery.cookie', 'facebox.js', "jcarousellite_1.0.1.js", "jquery.easing.compatibility.js", "jquery.easing.1.3.js", "jquery-ui-1.8.7.custom.min", "admin", "application", :concat => "global_admin" if is_admin? %>
<%end%>

<%= yield :head %>

<meta name="description" content="<%=strip_tags(@header[:description]).strip%>" />
<meta name="keywords" content="<%=@header[:keywords]%>" />

<meta name="OriginalPublicationDate" content="g" />
<meta http-equiv="Content-Language" content="en-gb" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<%if SETTINGS[:google][:verification]%><meta name="google-site-verification" content="<%=SETTINGS[:google][:verification]%>" /><%end%>