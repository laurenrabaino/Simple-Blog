<!-- LANDING PAGE -->
<div class="searchPage">
	
	<div class="leftSide">
		
		<ul class="tabHeader">
			<li class="tab<%if @tab=='posts'%>Selected<%end%>"><a href="/tags/<%=@tag%>/posts" title="<%=t("common.blog.display")%>"><%=t("common.blog.display").pluralize.capitalize%></a></li>
			<li class="tab<%if @tab=='pages'%>Selected<%end%>"><a href="/tags/<%=@tag%>/pages" title="<%=t("common.page.display").capitalize%>"><%=t("common.page.display").pluralize.capitalize%></a></li>
		</ul>
		
		<%if @tab == 'posts'%>
			<div class="tabBody">
				<%if @posts && !@posts.empty?%>
					<ul class="posts">
						<%@posts.each do |a|%>
							<%=render :partial=>"posts/post", :locals=>{ :cache_key => "landing_page", :a => a }%>
						<%end%>
					</ul>
					<%= will_paginate(@posts, :prev_label => "&laquo; #{t("pagination.previous").capitalize}", :next_label => "#{t("pagination.next").capitalize} &raquo;") %>
				<%else%>
					<p class="noResults"><%=t("common.blog.nocontent")%></p>
				<%end%>
			</div>
		<%end%>
		
		<%if @tab == 'pages'%>
			<div class="tabBody">
				<%if @pages && !@pages.empty?%>
					<ul class="posts">
						<%@pages.each do |p|%>
							<%=render :partial=>"pages/page", :locals=>{ :cache_key => "landing_page", :p => p }%>
						<%end%>
					</ul>
					<%= will_paginate(@pages, :prev_label => "&laquo; #{t("pagination.previous").capitalize}", :next_label => "#{t("pagination.next").capitalize} &raquo;") %>
				<%else%>
					<p class="noResults"><%=t("common.page.nocontent")%></p>
				<%end%>
			</div>
		<%end%>

	</div>
	
	<div class="rightSide">
	</div>
	
</div>